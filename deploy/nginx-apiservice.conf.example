# Exemplo de configuração Nginx para a API (apiservice.iagoveiculos.com.br)
# Copie para o servidor e ajuste conforme seu setup (path do SSL, upstream, etc.)

# Aumentar limite de corpo da requisição (evita 413 com upload de fotos)
# 50M permite enviar várias fotos em base64 sem erro
client_max_body_size 50M;

server {
    listen 80;
    listen [::]:80;
    server_name apiservice.iagoveiculos.com.br;
    # Redirecionar HTTP -> HTTPS (se usar SSL)
    # return 301 https://$server_name$request_uri;

    # Se não usar SSL, use apenas isso:
    location / {
        proxy_pass http://127.0.0.1:3001;   # porta onde o Node está rodando
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        # Importante: repassar o limite para o proxy
        client_max_body_size 50M;
    }
}

